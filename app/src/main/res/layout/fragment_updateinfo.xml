<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_updateinfo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_updateinfo_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_roundedcorner_button"
            android:text="上一步"
            android:textColor="@color/login_textcolor_selector" />

        <Button
            android:id="@+id/bt_updateinfo_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_roundedcorner_button"
            android:text="下一步"
            android:textColor="@color/login_textcolor_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_updateinfo_imgPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_updateinfo_button"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_updateinfo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_pot" />

        <ImageView
            android:id="@+id/iv_updateinfo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_pot" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_updateinfo_imgPosition"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_updateInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


    </LinearLayout>


</RelativeLayout>