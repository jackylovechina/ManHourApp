<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3399cc"
    tools:context="com.shg.manhourapp.LoginActivity">


    <TextView
        android:id="@+id/tv_login_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="#3399ff"
        android:clickable="true"
        android:padding="5dp"
        android:text="登陆"
        android:textColor="@color/login_textcolor_selector"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_in"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ship_128px" />

    <EditText
        android:id="@+id/et_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_login_logo"
        android:layout_marginTop="30dp"
        android:hint="请输入用户名"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_username"
        android:layout_marginTop="10dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/ll_login_checkItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_password"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_login_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录" />

        <CheckBox
            android:id="@+id/cb_login_remb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码" />

    </LinearLayout>


</RelativeLayout>
